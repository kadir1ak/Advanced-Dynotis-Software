<UserControl x:Class="Advanced_Dynotis_Software.Views.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Advanced_Dynotis_Software.Views.Pages"
             mc:Ignorable="d" 
             xmlns:p="clr-namespace:Advanced_Dynotis_Software.Properties">
    <Grid Background="{DynamicResource Page}">
        <TextBlock Text="{x:Static p:Resources.HomePage_Text}" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="24" 
                   FontWeight="Bold"/>
    </Grid>
</UserControl>
