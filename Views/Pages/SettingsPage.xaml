<UserControl x:Class="Advanced_Dynotis_Software.Views.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Advanced_Dynotis_Software.Views.Pages"
             xmlns:uc="clr-namespace:Advanced_Dynotis_Software.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="1">
            <Grid>
                <StackPanel x:Name="LeftMenuPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                    <!-- Menu Buttons -->
                    <uc:SettingButton Icon="Autorenew" Text="Automate Test" Margin="50"/>
                    <uc:SettingButton Icon="ContentSaveCog" Text="Save Config" Margin="50"/>
                    <uc:SettingButton Icon="BookSyncOutline" Text="Books" Margin="50"/>
                    <uc:SettingButton Icon="AlertCircleCheckOutline" Text="Alerts" Margin="50"/>
                    <uc:SettingButton Icon="Update" Text="Software Update" Margin="50"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
