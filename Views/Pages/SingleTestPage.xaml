<UserControl x:Class="Advanced_Dynotis_Software.Views.Pages.SingleTestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Advanced_Dynotis_Software.Views.Pages"
             xmlns:vmPages="clr-namespace:Advanced_Dynotis_Software.ViewModels.Pages"
             xmlns:uc="clr-namespace:Advanced_Dynotis_Software.Views.UserControls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vmPages:SingleTestViewModel, IsDesignTimeCreatable=True}">
    <UserControl.DataContext>
        <vmPages:SingleTestViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Device List" Foreground="Black" FontSize="16"/>
            <ComboBox Grid.Row="1" ItemsSource="{Binding AvailableDevices}" SelectedItem="{Binding SelectedDevice}" DisplayMemberPath="DeviceDisplayName"/>
            <Button Grid.Row="2" Content="Open" Command="{Binding ConnectCommand}" Margin="0,10,0,0"/>
        </Grid>

        <Grid Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Single Test Page" FontWeight="Bold"  FontSize="16" HorizontalAlignment="Center" Foreground="#151F2D"/>
        </Grid>

        <!-- Device Card -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" VerticalAlignment="Top">
            <ContentControl Content="{Binding ConnectedDevice}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <Grid Margin="10 5 10 0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Üst -->
                                <Grid Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="0" Margin="0 10 10 0">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="Port: " Foreground="Black" FontWeight="Bold" FontSize="16"/>
                                            <TextBlock Text="{Binding Device.PortName}" Foreground="Black" FontWeight="Bold" FontSize="16"/>
                                            <TextBlock Text=" - " Foreground="Black" FontWeight="Bold" FontSize="16"/>
                                            <TextBlock Text="{Binding Device.Model}" Foreground="Black" FontWeight="Bold" FontSize="16"/>
                                            <TextBlock Text=" - " Foreground="Black" FontWeight="Bold" FontSize="16"/>
                                            <TextBlock Text="{Binding Device.SeriNo}" Foreground="Black" FontWeight="Bold" FontSize="16"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                <!-- Sağ -->
                                <Grid Grid.Column="3" Grid.Row="0" Grid.RowSpan="3" Margin="0 10 10 10">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Label Content="Sağ" FontSize="24" Margin="5"/>
                                    </StackPanel>
                                </Grid>
                                <!-- Orta -->
                                <uc:DeviceCard Grid.Column="1" Grid.Row="1" DataContext="{Binding}" Margin="0 10 10 0"/>
                                <!-- Sol -->
                                <Grid Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Margin="0 10 10 10">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Label Content="Sol" FontSize="24" Margin="5"/>
                                    </StackPanel>
                                </Grid>
                                <!-- Alt -->
                                <Grid Grid.Column="1" Grid.Row="2"  Margin="0 10 10 10">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <uc:EffVariablesControl Margin="0 10 10 10" />
                                        <uc:ESCControl Margin="0 10 10 10" />
                                    </StackPanel>
                                </Grid>

                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </Grid>
    </Grid>
</UserControl>
