<UserControl x:Class="Advanced_Dynotis_Software.Views.UserControls.BalancerPolarChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Advanced_Dynotis_Software.Views.UserControls"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <oxy:PlotView Height="250" Grid.Column="0" Model="{Binding CartesianPlotModel}" FontSize="12" />
        <oxy:PlotView Height="250" Width="250" Grid.Column="1" Model="{Binding PolarPlotModel}"  FontSize="12"/>
    </Grid>
</UserControl>
