<UserControl x:Class="Advanced_Dynotis_Software.Views.UserControls.DeviceCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Advanced_Dynotis_Software.Views.UserControls"
             xmlns:vmWindows="clr-namespace:Advanced_Dynotis_Software.ViewModels.Windows"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             xmlns:icon="http://schemas.fontawesome.io/icons/" 
             d:DataContext="{d:DesignInstance Type=vmWindows:MainViewModel}"
             Name="Card">
    <Grid>
        <Border Width="500" Height="1280">
            <StackPanel>
                <TextBlock Text="{Binding Device.Name}" Foreground="Black" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Başlık -->
                        <RowDefinition Height="Auto"/>
                        <!-- Zaman -->
                        <RowDefinition Height="Auto"/>
                        <!-- Sıcaklık -->
                        <RowDefinition Height="Auto"/>
                        <!-- Motor Sıcaklığı -->
                        <RowDefinition Height="Auto"/>
                        <!-- Motor Hızı -->
                        <RowDefinition Height="Auto"/>
                        <!-- İtme -->
                        <RowDefinition Height="Auto"/>
                        <!-- Tork -->
                        <RowDefinition Height="Auto"/>
                        <!-- Gerilim -->
                        <RowDefinition Height="Auto"/>
                        <!-- Akım -->
                        <RowDefinition Height="Auto"/>
                        <!-- Basınç -->
                        <RowDefinition Height="Auto"/>
                        <!-- Titreşim -->
                        <RowDefinition Height="Auto"/>
                        <!-- Rüzgar Hızı -->
                        <RowDefinition Height="Auto"/>
                        <!-- Rüzgar Yönü -->
                        <RowDefinition Height="3*"/>
                        <!-- Grafik -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Device Information" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,5" FontWeight="Bold" FontSize="16"/>

                    <!-- Zaman -->
                    <TextBlock Text="Time: " Grid.Row="1" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding  Device.SensorData.Time}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5" VerticalAlignment="Center"/>

                    <!-- Sıcaklık -->
                    <TextBlock Text="Temperature: " Grid.Row="2" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding  Device.SensorData.AmbientTemp}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5" VerticalAlignment="Center"/>

                    <!-- Motor Sıcaklığı -->
                    <TextBlock Text="Motor Temperature: " Grid.Row="3" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding  Device.SensorData.MotorTemp}" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5" VerticalAlignment="Center"/>

                    <!-- Motor Hızı -->
                    <TextBlock Text="MotorSpeed: " Grid.Row="4" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding  Device.SensorData.MotorSpeed}" Grid.Row="4" Grid.Column="1" Margin="0,0,0,5" VerticalAlignment="Center"/>

                    <!-- İtme -->
                    <TextBlock Text="Thrust: " Grid.Row="5" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding  Device.SensorData.Thrust}" Grid.Row="5" Grid.Column="1" Margin="0,0,0,5" VerticalAlignment="Center"/>

                    <!-- Tork -->
                    <TextBlock Text="Torque: " Grid.Row="6" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding  Device.SensorData.Torque}" Grid.Row="6" Grid.Column="1" Margin="0,0,0,5" VerticalAlignment="Center"/>

                    <!-- Gerilim -->
                    <TextBlock Text="Voltage: " Grid.Row="7" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding  Device.SensorData.Voltage}" Grid.Row="7" Grid.Column="1" Margin="0,0,0,5" VerticalAlignment="Center"/>

                    <!-- Akım -->
                    <TextBlock Text="Current: " Grid.Row="8" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding  Device.SensorData.Current}" Grid.Row="8" Grid.Column="1" Margin="0,0,0,5" VerticalAlignment="Center"/>

                    <!-- Basınç -->
                    <TextBlock Text="Pressure: " Grid.Row="9" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding  Device.SensorData.Pressure}" Grid.Row="9" Grid.Column="1" Margin="0,0,0,5" VerticalAlignment="Center"/>

                    <!-- Titreşim -->
                    <TextBlock Text="Vibration: " Grid.Row="10" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding  Device.SensorData.Vibration}" Grid.Row="10" Grid.Column="1" Margin="0,0,0,5" VerticalAlignment="Center"/>

                    <!-- Rüzgar Hızı -->
                    <TextBlock Text="WindSpeed: " Grid.Row="11" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding  Device.SensorData.WindSpeed}" Grid.Row="11" Grid.Column="1" Margin="0,0,0,5" VerticalAlignment="Center"/>

                    <!-- Rüzgar Yönü -->
                    <TextBlock Text="WindDirection: " Grid.Row="12" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding  Device.SensorData.WindSpeed}" Grid.Row="12" Grid.Column="1" Margin="0,0,0,5" VerticalAlignment="Center"/>
                </Grid>

                <!-- Ambient Temperature Chart -->
                <TextBlock Text="Ambient Temperature" Grid.Row="1" Grid.ColumnSpan="2" Foreground="Black" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                <lvc:CartesianChart Series="{Binding AmbientTempSeriesCollection}" Grid.Row="2" Grid.ColumnSpan="2" Height="150" Margin="5">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Time" Labels="{Binding TimeLabels}" Foreground="Black">
                            <lvc:Axis.Separator>
                                <lvc:Separator Step="10"/>
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Temperature (°C)" Foreground="Black"></lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>

                <!-- Motor Temperature Chart -->
                <lvc:CartesianChart Series="{Binding MotorTempSeriesCollection}" Height="100" Margin="5">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Time" Labels="{Binding TimeLabels}" Foreground="Black"></lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Motor Temperature (°C)" Foreground="Black"></lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>

                <!-- Motor Speed Chart -->
                <lvc:CartesianChart Series="{Binding MotorSpeedSeriesCollection}" Height="100" Margin="5">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Time" Labels="{Binding TimeLabels}" Foreground="Black"></lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Motor Speed (RPM)" Foreground="Black"></lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>

                <!-- Thrust Chart -->
                <lvc:CartesianChart Series="{Binding ThrustSeriesCollection}" Height="100" Margin="5">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Time" Labels="{Binding TimeLabels}" Foreground="Black"></lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Thrust (N)" Foreground="Black"></lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>

                <!-- Torque Chart -->
                <lvc:CartesianChart Series="{Binding TorqueSeriesCollection}" Height="100" Margin="5">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Time" Labels="{Binding TimeLabels}" Foreground="Black"></lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Torque (Nm)" Foreground="Black"></lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>

                <!-- MiniCard -->
                <local:DeviceMiniCard DataContext="{Binding}"/>
                
            </StackPanel>
        </Border>
    </Grid>
    
</UserControl>
