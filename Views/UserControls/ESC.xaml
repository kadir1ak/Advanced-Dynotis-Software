<UserControl x:Class="Advanced_Dynotis_Software.Views.UserControls.ESC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Advanced_Dynotis_Software.Views.UserControls"
             xmlns:helpers="clr-namespace:Advanced_Dynotis_Software.Services.Helpers"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d">
    <UserControl.Resources>
        <helpers:ValueToWidthConverter x:Key="ValueToWidthConverter"/>

        <!-- Gradient dolgu için fırça tanımı -->
        <LinearGradientBrush x:Key="GradientBrush" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Color="#FFD700" Offset="0.0"/>
            <GradientStop Color="#FF8C00" Offset="0.5"/>
            <GradientStop Color="#FF4500" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- ModernSliderStyle Tanımı -->
        <Style TargetType="Slider" x:Key="ModernSliderStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Height="6" Background="LightGray" CornerRadius="3"/>
                            <Border Grid.Row="0" Height="6" Background="{StaticResource GradientBrush}" CornerRadius="3"
                            HorizontalAlignment="Left"
                            Width="{Binding Path=Value, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ValueToWidthConverter}}"/>
                            <Thumb Grid.Row="0" Width="30" Height="30" Background="White"
                           BorderBrush="Gray" BorderThickness="1"
                           HorizontalAlignment="Left"
                           Margin="-15,0,0,0"
                           DragDelta="Thumb_DragDelta">
                                <Thumb.Template>
                                    <ControlTemplate TargetType="Thumb">
                                        <Grid>
                                            <Ellipse Fill="White" Stroke="Gray" StrokeThickness="1"/>
                                            <icon:PackIconMaterial Kind="Fire" Width="16" Height="16" Foreground="Red"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Thumb.Template>
                                <Thumb.RenderTransform>
                                    <TranslateTransform X="{Binding Path=Value, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ValueToWidthConverter}}"/>
                                </Thumb.RenderTransform>
                            </Thumb>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Slider Grid.Column="0" Style="{StaticResource ModernSliderStyle}"
                Minimum="0"
                Maximum="100"
                TickFrequency="5"
                IsSnapToTickEnabled="True"
                LargeChange="5"
                Value="{Binding Speed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Width="500"
                Height="30"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"/>
        <Label Grid.Column="1" 
               FontSize="16"
               FontWeight="DemiBold"
               Content="{Binding Speed}" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Right" 
               Margin="20"/>
    </Grid>
</UserControl>
