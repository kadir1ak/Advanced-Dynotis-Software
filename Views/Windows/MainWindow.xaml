<Window x:Class="Advanced_Dynotis_Software.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Advanced_Dynotis_Software.Views.Windows"
        xmlns:vmWindows="clr-namespace:Advanced_Dynotis_Software.ViewModels.Windows"
        xmlns:uc="clr-namespace:Advanced_Dynotis_Software.Views.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="1280"
        Background="LightSkyBlue"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vmWindows:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            <ComboBox Grid.Row="0" ItemsSource="{Binding AvailablePorts}" SelectedItem="{Binding SelectedPort}" Width="200" Margin="5"/>
            <Button Grid.Row="1" Content="Add Device" Command="{Binding AddDeviceCommand}" Width="100" Margin="5"/>
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding devicesViewModel}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <uc:DeviceCard DataContext="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
