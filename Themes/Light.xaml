<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    
 
    <!-- General Colors -->
    <SolidColorBrush Color="#151F2D" x:Key="Text"/>
    <SolidColorBrush Color="White" x:Key="Page"/>
    <SolidColorBrush Color="#FFF9E9E9" x:Key="PageBorder"/>

    <!-- Clock and Data -->
    <SolidColorBrush Color="#151F2D" x:Key="TimeText"/>

    <!-- Menu Button -->
    <SolidColorBrush Color="#151F2D" x:Key="menuButtonStandart"/>
    <SolidColorBrush Color="#FFFF662D" x:Key="menuButtonTrigger"/>

    <!-- Device Card -->
    <SolidColorBrush Color="#151F2D" x:Key="deviceCardIcon"/>
    
    <!-- Device Mini Card -->
    <SolidColorBrush Color="White" x:Key="deviceMiniForeground"/>
    <SolidColorBrush Color="#FFFF662D" x:Key="deviceMiniBackdrop"/>
    <SolidColorBrush Color="#151F2D" x:Key="deviceMiniBackground"/>

    <!-- Eff Variables Control -->
    <SolidColorBrush Color="#151F2D" x:Key="EffVariablesControlText"/>
    <SolidColorBrush Color="#151F2D" x:Key="EffVariablesControlIcon"/>

    <!-- Automate -->
    <SolidColorBrush Color="#151F2D" x:Key="AutomateText"/>
    <SolidColorBrush Color="#FFFF662D" x:Key="AutomateAddButton"/>
    <SolidColorBrush Color="#FFFF7643" x:Key="AutomateClearButton"/>
    <SolidColorBrush Color="#FFFF662D" x:Key="AutomateSaveButton"/>
    <SolidColorBrush Color="#FFFF662D" x:Key="AutomateLoadButton"/>
    <SolidColorBrush Color="#FFFF662D" x:Key="AutomateChart"/>
    <SolidColorBrush Color="#151F2D" x:Key="AutomateChartText"/>

    <!-- ESC -->
    <SolidColorBrush Color="#FFFF662D" x:Key="ESCButton"/>
    <SolidColorBrush Color="OrangeRed" x:Key="ESCWarning"/>
    <SolidColorBrush Color="OrangeRed" x:Key="ESCLockIcon"/>

    <!-- GeneralButton -->
    <SolidColorBrush Color="#FFFF7A2D" x:Key="GeneralButtonButton"/>
    <SolidColorBrush Color="#FFFF7A2D" x:Key="GeneralButtonButtonBackdrop"/>
    <SolidColorBrush Color="#FFF9A761" x:Key="GeneralButtonButtonTrigger"/>
    <SolidColorBrush Color="#151F2D" x:Key="GeneralButtonText"/>
    <SolidColorBrush Color="#FFF98B61" x:Key="GeneralButtonIconBackdrop"/>
    <SolidColorBrush Color="#FFF9A761" x:Key="GeneralButtonIconTrigger"/>
    <SolidColorBrush Color="#151F2D" x:Key="GeneralButtonIcon"/>

    <!-- Record -->
    <SolidColorBrush Color="#FFFF662D" x:Key="RecordButton"/>
    <SolidColorBrush Color="#151F2D" x:Key="RecordText"/>
    <SolidColorBrush Color="#FFDE3A2A" x:Key="RecordIcon"/>

    <!-- Chart -->
    <SolidColorBrush Color="Gray" x:Key="ChartSeparator"/>

    <!-- Tare -->
    <SolidColorBrush Color="#FF3AF389" x:Key="TareButton"/>
    <SolidColorBrush Color="#151F2D" x:Key="TareText"/>
    <SolidColorBrush Color="#151F2D" x:Key="TareIcon"/>

    <!-- Balancer -->
    <BitmapImage x:Key="MotorAndPropellerImage" UriSource="pack://application:,,,/Documents/Images/Motor_and_Propeller.png"/>
    <SolidColorBrush Color="#151F2D" x:Key="Line"/>
    <SolidColorBrush Color="#151F2D" x:Key="BalancerRoutingStepsListBoxText"/>

    <!-- AngularGauge -->
    <SolidColorBrush Color="#7FDBB6" x:Key="AngularGaugeMotorSpeed"/>


</ResourceDictionary>