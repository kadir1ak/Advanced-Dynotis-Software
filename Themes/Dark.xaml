    <!-- Menu Button -->
    <SolidColorBrush Color="#dfe6e9" x:Key="menuButtonStandart"/>
    <SolidColorBrush Color="MediumPurple" x:Key="menuButtonTrigger"/>

    
</ResourceDictionary>